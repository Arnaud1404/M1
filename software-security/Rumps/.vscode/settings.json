{
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "copy pdf",
            "command": "cp",
            "args": [
                "%OUTDIR%/%DOCFILE%.pdf",
                "."
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk",
                "copy pdf"
            ]
        },
        {
            "name": "lualatex âžž bibtex âžž lualatex",
            "tools": [
                "lualatex",
                "bibtex",
                "lualatex",
                "lualatex",
                "copy pdf"
            ]
        }
    ],
    // Force PDF viewer to open in a VS Code tab
    "latex-workshop.view.pdf.viewer": "tab"
}